<p id="notice"><%= notice %></p>
<main role="main">

  <section class="jumbotron text-center">
    <div class="container">
      <h1>For Sale</h1>
      <p class="lead text-muted">Have a look at whats currently on offer at iGarageSale, remember you're free to look, but if you want to buy or sell you need to sign up or sign in!</p>
      <p>
        <a href='items/new' class="btn btn-primary my-2">Sell Somthing!</a>
      </p>
    </div>
  </section>
  
<div class="album py-5 bg-light">
    <div class="container">
      <div class="row">
        <% @items.each do |item| %>
          <div class="col-md-4">
            <div class="card mb-4 shadow-sm">
              <img class="card-img-top" <%= image_tag item.item_picture if item.item_picture.attached? %>
                <div class="card-body">
                  <p class="card-text"><h3> <%= item.title %></h3><br><%= item.description %></p>
                    <div class="d-flex justify-content-between align-items-center">
                     <div class="btn-group">
                    
                    <button type="button" class="btn btn-sm btn-outline-secondary"><%= link_to 'View', item %></button>
            
                    <% if item.profile.user == current_user %>
                      <button type="button" class="btn btn-sm btn-outline-secondary"><%= link_to 'Edit', edit_item_path(item) %></button>
                      <button type="button" class="btn btn-sm btn-outline-secondary"><%= link_to 'Delete', item, method: "delete" %></button>
                    <% end %>
                    </div>
                  <small class="text-muted"><b>$ <%= item.price %></small></b>
                </div>
              </div>
            </div>
          </div>
        <% end %>
    </div>
  </div>
</main>
 