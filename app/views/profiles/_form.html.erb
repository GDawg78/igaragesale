<%= form_with(model: profile, url: profiles_path, local: true) do |form| %>

  <div class="field">
    <%= form.label :username %>
    <%= form.text_field :username %>
  </div>

  <div class="field">
    <%= form.label :first_name %>
    <%= form.text_field :first_name %>
  </div>

  <div class="field">
    <%= form.label :surname %>
    <%= form.text_field :surname %>
  </div>


  <div class="actions">
    <%= form.submit %>
  </div>
<% end %>
