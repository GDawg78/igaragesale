<p id="notice"><%= notice %></p>

<h1>Profiles</h1>

<table>
  <thead>
    <tr>
      <th>Username</th>
      <th>First Name</th>
      <th>Surname</th>
      <th colspan="3"></th>
    </tr>
  </thead>

    <tbody>
    <% @profiles.each do |profile| %>
      <tr>
        <div class="card" style="width: 18rem;">
          <img class="card-img-top" <%= image_tag profile.profile_picture if profile.profile_picture.attached? %> <%= profile.username %>
          <div class="card-body">
            <p class="card-text"> <%= profile.first_name %></p>
            <%= link_to 'Show', profile %>
            <%= link_to 'Edit', edit_profile_path(profile) %>
            <%= link_to 'Destroy', profile, method: :delete, data: { confirm: 'Are you sure?' } %>

          </div>
        </div>      
      </tr>
    <% end %>
  </tbody>
</table>

<br>

<%= link_to 'New Profile', new_profile_path %>
